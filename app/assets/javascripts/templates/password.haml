.modal-header
  %h3.modal-title Change Password
.modal-body.form.form-horizontal
  .form-group
    %label.control-label.col-sm-3{ for: 'password' } Password
    .col-sm-9{ errors: 'ctrl.errors.password' }
      %input.form-control#password{ type: 'password', 'ng-model' => 'ctrl.view.password' }
  .form-group
    %label.control-label.col-sm-3{ for: 'password_confirmation' } Confirm Password
    .col-sm-9{ errors: 'ctrl.errors.password_confirmation' }
      %input#password_confirmation.form-control#password_confirmation{ type: 'password', 'ng-model' => 'ctrl.view.password_confirmation' }
.modal-footer
  %button.btn.btn-primary{ 'busy-click' => 'ctrl.save()' } Save
  %button.btn.btn-default{ 'ng-click' => '$dismiss()' } Cancel
