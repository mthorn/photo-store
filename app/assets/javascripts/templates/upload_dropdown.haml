%ul.dropdown-menu

  %li{ role: 'menuitem' }
    %a{ 'ng-click' => '$ctrl.editTags(upload)' }
      %i.fa.fa-tags
      Edit Tags

  %li{ role: 'menuitem', 'ng-show' => 'upload.deleted_at' }
    %a{ 'ng-click' => '$ctrl.restore(upload)' }
      %i.fa.fa-save
      Restore

  %li{ role: 'menuitem' }
    %a{ 'ng-click' => '$ctrl.delete(upload)' }
      %i.fa.fa-trash
      Delete

  %li{ role: 'menuitem' }
    %a{ 'ng-click' => '$ctrl.rotate(upload, -90)' }
      %i.fa.fa-rotate-left
      Rotate Left

  %li{ role: 'menuitem' }
    %a{ 'ng-click' => '$ctrl.rotate(upload, 90)' }
      %i.fa.fa-rotate-right
      Rotate Right

  %li.dropdown-header Info

  %li.disabled{ role: 'menuitem' }
    %a
      %strong ID
      {{upload.id}}
  %li.disabled{ role: 'menuitem' }
    %a
      %strong Type
      {{upload.type}} ({{upload.mime}})
  %li.disabled{ role: 'menuitem' }
    %a
      %strong Name
      {{upload.name}}
  %li.disabled{ role: 'menuitem' }
    %a
      %strong Size
      {{upload.size | bytes}}
  %li.disabled{ role: 'menuitem', 'ng-show' => 'upload.width' }
    %a
      %strong Dimensions
      {{upload.width}} x {{upload.height}}
  %li.disabled{ role: 'menuitem', 'ng-show' => 'upload.taken_at' }
    %a
      %strong Taken
      {{upload.taken_at | date:"yyyy-MM-dd"}}
  %li.disabled{ role: 'menuitem', 'ng-show' => 'upload.imported_at' }
    %a
      %strong Imported
      {{upload.imported_at | date:"yyyy-MM-dd"}}
  %li.disabled{ role: 'menuitem', 'ng-show' => 'upload.location' }
    %a
      %strong Location
      {{upload.location}}
  %li.disabled{ role: 'menuitem', 'ng-show' => 'upload.tags.length' }
    %a
      %strong Tags
      {{upload.tags.join(', ')}}
